<div class="form-container">
  <h1 class="form-title">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input' %>
    </div>

    <div class="form-field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-field flex items-center">
        <%= f.check_box :remember_me, class: 'form-checkbox' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Login", class: 'my-4 form-submit' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
